{
    "name": "tequilla/mongodb-php-lib",
    "description": "PHP MongoDB abstraction layer (driver library)",
    "type": "library",
    "require": {
        "php": ">=5.6",
        "ext-mongodb": ">=1.1.0",
        "symfony/options-resolver": ">=2.8"
    },
    "autoload": {
        "psr-4": { "Tequilla\\MongoDB\\": "src/" },
        "files": ["src/internal_functions.php"]
    },
    "autoload-dev": {
        "psr-4": { "Tequilla\\MongoDB\\Tests\\": "tests/" }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Petr Buchin",
            "email": "petrbuchyn@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^5.4"
    }
}
